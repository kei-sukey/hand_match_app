<%= form_with(model: @item, local: true) do |f|%>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :image, "出品画像 (必須 クリックしてファイルをアップロード)" %><br />
    <%= f.file_field :image %>
    <div id="image-list"></div>
  </div>

  <div class="field">
    <%= f.label :name, "作品名" %><br />
    <%= f.text_field :name, placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :explanation, "作品説明" %><br />
    <%= f.text_area :explanation, class: :form__text, placeholder:"商品の説明（必須 1,000文字まで）（PRポイント、お勧め用途、注意点など）例）シンプルで上品なイヤリングです。フォーマルからカジュアルまであわせられます。" ,rows:"7" ,maxlength:"1000" %>
  </div>

  <div class="field">
    <%= f.label :explanation, "カテゴリー" %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "色" %><br />
    <%= f.collection_select(:color_id, Color.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "素材" %><br />
    <%= f.collection_select(:material_id, Material.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "サイズ" %><br />
    <%= f.collection_select(:size_id, Size.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "配送料の負担" %><br />
    <%= f.collection_select(:delivery_charge_id, DeliveryCharge.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "発送までの日数" %><br />
    <%= f.collection_select(:shipping_day_id, ShippingDay.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "発送元の地域" %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :explanation, "販売価格 (¥300〜9,999,999)" %><br />
    <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
      <span class="sell-yen">円</span>
  </div>

  <div class="actions">
    <%= f.submit "出品する", class: :form__btn %>
    <%=link_to 'もどる', root_path, class: :form__btn %>
  </div>

<% end %>