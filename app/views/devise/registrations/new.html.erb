<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード ※英字と数字の両方を含めて設定してください" %><br />
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワード再入力", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) hanako", maxlength:"40" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "お名前(全角)" %><br />
          <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
          <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 花子" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "お名前カナ(全角)" %><br />
          <%= f.text_field :last_kana_name, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_field :first_kana_name, class:"input-name", id:"first-name-kana", placeholder:"例) ハナコ" %>
        </div>

      <div class="field">
        <label class="form-text">生年月日</label>
        <div class='input-birth-wrap'>
              <%= raw sprintf(
                          f.date_select(
                            :birthday,
                            class:'select-birth',
                            id:"birth-date",
                            use_month_numbers: true,
                            prompt:'--',
                            start_year: 1930,
                            end_year: (Time.now.year - 5),
                            date_separator: '%s'),
                          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
